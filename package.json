{
  "name": "@17media/node-logger",
  "version": "2.1.0",
  "description": "Centralized logger for 17.Media Node.JS projects",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src -d lib --ignore __tests__",
    "build:watch": "npm run build -- --watch",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/17media/node-logger.git"
  },
  "keywords": [
    "logger",
    "slack",
    "fluentd"
  ],
  "author": "17media",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/17media/node-logger/issues"
  },
  "homepage": "https://github.com/17media/node-logger#readme",
  "dependencies": {
    "@slack/client": "^4.2.0",
    "lodash": "^4.17.4",
    "superagent": "^3.5.2"
  },
  "devDependencies": {
    "@17media/eslint-config-17media": "^1.0.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.0",
    "babel-preset-env": "^1.4.0",
    "coveralls": "^2.13.1",
    "deep-freeze": "0.0.1",
    "eslint": "^3.19.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.10.3",
    "jest": "^20.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/testing/setup.js"
  }
}
